<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_defValue"
        android:inputType="text"
        android:singleLine="true"
    />
    <ListPreference
        android:title="@string/pref_temperature_title"
        android:key="@string/pref_temperature_key"
        android:defaultValue="@string/pref_tempUnits_metric"
        android:entries="@array/pref_temperature_label_units"
        android:entryValues="@array/pref_temperature_units"
    />

</PreferenceScreen>